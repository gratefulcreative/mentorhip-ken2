
<div class="top_margin container-fluid" style="background-color:#EEF6F6; box-shadow: 0 1em 1em gray;padding-bottom:180px;margin:115px 65px 15px;">
  <div class="well" style="margin:120px 0px 0px 180px;width:685px;">
    <%= form_for(resource, :as => resource_name ,:url => session_path(resource_name) , :html => { :class => 'form-horizontal form-signup signup-shadow'}) do |f| %>
      <h2 class="signup_color">Sign in</h2>
    
      <%= devise_error_messages! %>        
       
        <% if params[:type] == 'provider' %>
          <input type="hidden" name="type" value="provider">
        <%end%>
        <div class="control-group" style="">
          <label class="control-label signup_color" for="inputEmail">Email</label>
          <div class="controls">
            <%= f.email_field :email , :class => 'required'%>
          </div>
        </div>
        <div class="control-group">
          <label class="control-label root_color" for="inputEmail">Password</label>
          <div class="controls">
            <%= f.password_field :password , :class => 'required' , :minlength => '5' %>
          </div>
        </div>
        <div class="control-group">
          <div class="controls">
          <% if devise_mapping.rememberable? -%>        
            <label class="checkbox root_color">
              <%= f.check_box :remember_me %> <%= f.label :remember_me%>
            </label>
          <% end -%>
            <%= f.submit "Sign in"  , :class => 'btn root_color'%>
          </div>
        </div>
        <%= link_to image_tag('facebook_connec.jpg'), user_omniauth_authorize_path(:facebook) ,:style=>"margin-left:180px;"%>
      
    <%end%>
    
    <div class="span12">
      <div class="span1">
        <%if params[:type] == 'provider'%>
          <%= link_to "Signup?", new_user_registration_path(:type=> params[:type]) ,:style=>"margin-left:400px;"%>
        <%else%>
          <%= link_to "Signup?", new_user_registration_path ,:style=>"margin-left:400px;"%>
        <%end%>
      </div>
      <div>
        <%= link_to "Forgot Password?",  new_user_password_path ,:style=>"margin-left:430px;"%>
      </div>
    </div><br/>
  </div>    
  
</div>